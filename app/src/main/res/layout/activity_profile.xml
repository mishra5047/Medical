<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="70dp"
        android:layout_height="match_parent"
        tools:ignore="NotSibling">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/blueTop"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/profile_about_rectangle">

        <ImageView
            android:id="@+id/update"
            android:layout_height="35dp"
            android:layout_width="35dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/pencil"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"

        />
    </RelativeLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ProfilePic"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/first_screen"
        app:civ_border_width="8dp"
        app:civ_border_color="@color/DarkBlue"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_below="@id/ProfilePic"
            android:layout_marginTop="10dp"
            android:id="@+id/nameAge"
            >

            <TextView
                android:id="@+id/nameProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHELLY GARG"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/postText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Post"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textColor="@color/Black"
                android:textSize="20sp"/>
        </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/Aboutlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardBackgroundColor="@color/LightCyan"
        android:layout_below="@id/nameAge"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="About"
            android:textColor="@color/DarkBlue"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:maxLines="8"
            android:text="xzcbzhjfchshfhsdhfghs sdfvhsahfgas sghfdghasgfas dhfggagfhasg dhgawsfghdah asdfvgashfA"
            android:textSize="18dp"
            android:id="@+id/aboutprofile"
            />


    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/Aboutlayout"
        android:id="@+id/experience"
        >
        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            app:cardBackgroundColor="@color/blue_bg"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Experience"
                android:textColor="@color/White"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/White"
                android:text="xzcbzhjfchshfhsdhfghs sdfvhsahfgas sghfdghasgfas dhfggagfhasg dhgawsfghdah asdfvgashfA"
                android:textSize="18dp"
                android:id="@+id/experienceprofile"
                />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            app:cardBackgroundColor="@color/blue_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Education"
                android:textColor="@color/White"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/educationprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/White"
                android:text="xzcbzhjfchshfhsdhfghs sdfvhsahfgas sghfdghasgfas dhfggagfhasg dhgawsfghdah asdfvgashfA"
                android:textSize="18dp"
                />
        </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/Contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp"
        app:cardBackgroundColor="@color/LightCyan"
        android:layout_below="@id/experience"
        >

    </androidx.cardview.widget.CardView>
</RelativeLayout>
    </ScrollView>

    <com.gauravk.bubblenavigation.BubbleNavigationConstraintView
        android:id="@+id/bottomNavProf"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        app:bnc_mode="spread"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue_bg"
        >


        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/c_item_menu"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:bt_shape="@drawable/item_bottombar"
            app:bt_colorActive="@color/Black"
            app:bt_colorInactive="@color/White"
            app:bt_icon="@drawable/home"
            app:bt_title="Home"
            />


        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/c_item_add"
            android:layout_width="wrap_content"
            app:bt_shape="@drawable/item_bottombar"
            android:layout_height="50dp"
            app:bt_colorActive="@color/Black"
            app:bt_colorInactive="@color/White"
            app:bt_icon="@drawable/list"
            app:bt_title="Appointment"
            />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/c_item_user"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:bt_active="true"
            app:bt_shape="@drawable/item_bottombar"
            app:bt_colorActive="@color/Black"
            app:bt_colorInactive="@color/White"
            app:bt_icon="@drawable/user_black"
            app:bt_title="@string/profile_tab"
            />

    </com.gauravk.bubblenavigation.BubbleNavigationConstraintView>

</RelativeLayout>

