<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/rounded_button_black"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:layout_marginLeft="15dp"
            android:textSize="20sp"
            android:layout_toRightOf="@id/nameDoc"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_weight="1"
            android:id="@+id/time"
            android:textColor="@color/Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_toRightOf="@id/date"
            android:layout_centerVertical="true"
            />
    </LinearLayout>

        <RelativeLayout
            android:id="@+id/doc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pat"
                android:textColor="@color/Black"
                android:text="Patient"
                android:textSize="20sp"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameDoc"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/pat"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/Black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noDoc"
            android:layout_toRightOf="@id/nameDoc"
            android:textSize="15sp"
            android:layout_marginLeft="8dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:layout_marginLeft="15dp"
            android:background="@drawable/call_icon"
            android:id="@+id/callDoc"
            android:layout_toRightOf="@id/noDoc"
            android:layout_width="30dp"
            android:layout_height="30dp"
            />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/doc">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/doctxt"
                android:textColor="@color/Black"
                android:text="Doctor"
                android:textSize="20sp"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameUser"
                android:layout_marginLeft="8dp"
            android:textSize="20sp"
                android:layout_toRightOf="@id/doctxt"
            android:textStyle="bold"
            android:textColor="@color/Black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noUser"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/nameUser"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            />


        <ImageView
            android:background="@drawable/call_icon"
            android:id="@+id/callUser"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/noUser"
            android:layout_width="30dp"
            android:layout_height="30dp"
            />

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>