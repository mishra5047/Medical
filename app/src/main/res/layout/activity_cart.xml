<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartActivity">

    <RelativeLayout
        android:id="@+id/lay_1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/blue_bg"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_centerVertical="true"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nirogo"
            android:layout_centerInParent="true"
            android:fontFamily="@font/neue_regular"
            android:textSize="35sp"
            android:textColor="@color/White"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/medicine"
        android:layout_centerInParent="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coming Soon.."
        android:textSize="40sp"
        android:layout_below="@id/img"
        android:layout_centerHorizontal="true"
        android:textColor="@color/Black"
        android:fontFamily="@font/neue_regular"/>

    <com.gauravk.bubblenavigation.BubbleNavigationConstraintView
        android:id="@+id/bottomNavCart"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        app:bnc_mode="spread"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/White"
        >

    <com.gauravk.bubblenavigation.BubbleToggleView
        android:id="@+id/c_item_menu"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:bt_colorActive="@color/blue_bg"
        app:bt_colorInactive="@color/Black"
        app:bt_icon="@drawable/home"
        app:bt_title="Home"
        />



    <com.gauravk.bubblenavigation.BubbleToggleView
        android:id="@+id/c_item_reminder"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="#90EE90"
        app:bt_colorActive="@color/blue_bg"
        app:bt_colorInactive="@color/Black"
        app:bt_title="Ambulance"
        app:bt_icon="@drawable/ambulance_dark"/>
    <!--            app:bt_badgeBackgroundColor="#90EE90"-->


    <com.gauravk.bubblenavigation.BubbleToggleView
        android:id="@+id/c_item_add"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@color/LightGreen"
        app:bt_colorActive="@color/blue_bg"
        app:bt_colorInactive="@color/Black"
        app:bt_icon="@drawable/list"
        app:bt_title="Appointment"
        />

    <com.gauravk.bubblenavigation.BubbleToggleView
        android:id="@+id/c_item_check"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:bt_active="true"
        app:bt_colorActive="@color/blue_bg"
        app:bt_colorInactive="@color/Black"
        app:bt_icon="@drawable/cart"
        app:bt_title="Cart"
        />

    <com.gauravk.bubblenavigation.BubbleToggleView
        android:id="@+id/c_item_user"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:bt_colorActive="@color/blue_bg"
        app:bt_colorInactive="@color/Black"
        app:bt_icon="@drawable/user_black"
        app:bt_title="@string/profile_tab"
        />
    </com.gauravk.bubblenavigation.BubbleNavigationConstraintView>
</RelativeLayout>