<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">

    <RelativeLayout
        android:id="@+id/lay_1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/blue_bg"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_centerVertical="true"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nirogo"
            android:layout_centerInParent="true"
            android:fontFamily="@font/neue_regular"
            android:textSize="35sp"
            android:textColor="@color/White"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/search_image"
        android:layout_centerInParent="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coming Soon.."
        android:textSize="50sp"
        android:layout_below="@id/img"
        android:layout_centerHorizontal="true"
        android:textColor="@color/Black"
        android:fontFamily="@font/neue_regular"/>

    <com.gauravk.bubblenavigation.BubbleNavigationConstraintView
        android:id="@+id/bottomNavSearch"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        app:bnc_mode="spread"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rounded_rectangle"
        >

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/c_item_menu"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:bt_colorActive="@color/blue_bg"
            app:bt_colorInactive="@color/Black"
            app:bt_icon="@drawable/home"/>

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/c_item_reminder"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#90EE90"
            app:bt_colorActive="@color/blue_bg"
            app:bt_colorInactive="@color/Black"
            app:bt_icon="@drawable/ambulance_dark"/>
        <!--            app:bt_badgeBackgroundColor="#90EE90"-->


        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/c_item_add"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/LightGreen"
            app:bt_colorActive="@color/blue_bg"
            app:bt_colorInactive="@color/Black"
            app:bt_icon="@drawable/list"
            />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/c_item_check"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:bt_colorActive="@color/blue_bg"
            app:bt_colorInactive="@color/Black"
            app:bt_icon="@drawable/cart"
            />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/c_item_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:bt_colorActive="@color/blue_bg"
            app:bt_colorInactive="@color/Black"
            app:bt_icon="@drawable/search"
            app:bt_active="true"
            />


        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/c_item_user"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:bt_colorActive="@color/blue_bg"
            app:bt_colorInactive="@color/Black"
            app:bt_icon="@drawable/user_black"
            />

    </com.gauravk.bubblenavigation.BubbleNavigationConstraintView>

</RelativeLayout>